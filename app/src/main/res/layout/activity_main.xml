<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/light_status"
        android:contentDescription="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/body"
        android:background="@drawable/flashlight_light_off"/>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/flashlight_body">

        <ImageView
            android:id="@+id/flashlightSwitch"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="110dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="110dp"
            android:background="@drawable/flashlight_switcher_off"/>
    </RelativeLayout>

</RelativeLayout>